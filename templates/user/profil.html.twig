    {{ form_widget(formadd.image, {'attr': {'style': 'display: none;'}, 'id': 'imageInput'}) }}
    {{ form_widget(formadd.submit, {'attr': {'class': 'btn btn-link', 'style': 'display: none;'}, 'id': 'submitButton'}) }}
{{ form_end(formadd) }}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        // Trigger file input when the label is clicked
        $('#imageLabel').click(function() {
            $('#imageInput').click();
        });

        // Update the label text and show the submit button when a file is selected
        $('#imageInput').change(function() {
            // Display the submit button
            $('#submitButton').show();
        });
    });
</script>
